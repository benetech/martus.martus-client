<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
   	<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
      <tabs>
      		<Tab text="%SignIn">
         <content>
         		    <BorderPane>
         				<center>
         				  <VBox>
            <children>
            				    <GridPane fx:id="signInPane" vgap="5.0" xmlns:fx="http://javafx.com/fxml">
               <children>
               				        <Label styleClass="headingLevel3" text="%CreateAccountUserName" />
               				        <TextField id="accountName" fx:id="userNameField" promptText="%AccountUserNameInstructions" GridPane.columnIndex="1" />
               		
               				        <Label styleClass="headingLevel3" text="%Password" GridPane.rowIndex="1" />
               				        <PasswordField id="password" fx:id="passwordField" promptText="%PasswordInstructions" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
                                 <columnConstraints>
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
            		
            				    </GridPane>
            				    <VBox fx:id="createPane">
               <children>
               					    <Hyperlink fx:id="newAccountButton" onAction="#onNewAccount" text="%CreateNewAccount" />
               </children>
            					</VBox>
            </children>
         				  </VBox>
         				</center>
         				<bottom>
         					<HBox>
            <children>
            					    <Label styleClass="headingLevel2" text="%ChooseLanguage" />
            		        		<ChoiceBox fx:id="languagesDropdown" />
            					
            						<Button fx:id="okButton" onAction="#onOk" text="%button.SignIn" />
            						<Button onAction="#onCancel" text="%Button.cancel" />
            </children>
         					</HBox>
         				</bottom>
         		    </BorderPane>
         </content>
      		</Tab>
      		<Tab fx:id="restoreTab" text="%Restore">
         <content>
         			<VBox>
            <children>
            			    <Button onAction="#onRestoreShare" text="%Button.RecoverAccountByShare" />
            			    <Button onAction="#onRestoreFile" text="%Button.RecoverAccountByBackup" />
            </children>
         			</VBox>
         </content>
      		</Tab>
      </tabs>
   	</TabPane>
   </children>
</StackPane>
