<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <top>
  	  <VBox styleClass="titleBox">
     <children>
         <Label fx:id="headerTitleLabel" alignment="CENTER" styleClass="titleText" text="[New {Record/Note} / Title of Message]" BorderPane.alignment="CENTER">
      </Label>
     </children>
      </VBox>
   </top>
   <center>
      <VBox styleClass="headerFieldBox" prefHeight="110.0" BorderPane.alignment="CENTER">
		<children>
            <Separator prefWidth="200.0">
			<VBox.margin>
				<Insets bottom="5.0" />
			</VBox.margin>
            </Separator>
            <GridPane alignment="CENTER_LEFT" prefWidth="920.0">
				<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="200" minWidth="50" prefWidth="150" />
				<ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="770" />
				</columnConstraints>
				<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				</rowConstraints>
				<children>
				
				<!--Column 1 -->
                  <Label styleClass="systemFieldTitle" text="%RecordTitle" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label styleClass="systemFieldTitle" text="%To" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label styleClass="systemFieldTitle" text="%From" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  
                  <!-- Column 2 -->
                  <TextField fx:id="titleField" styleClass="systemTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
          
				  <GridPane minWidth="280" prefWidth="750" GridPane.columnIndex="1" GridPane.rowIndex="1">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="700.0" />
                        <ColumnConstraints />
					</columnConstraints>
					<rowConstraints>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
					</rowConstraints>
					<children>
                        <TextField fx:id="toField" editable="false" styleClass="systemTextField" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
						</TextField>
                        <Button styleClass="iconButton" fx:id="addRemoveContact" mnemonicParsing="false" onAction="#onAddRemoveContact" GridPane.columnIndex="1" GridPane.rowIndex="0">
							<graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
								<image>
								<Image url="@../../images/add_contacts.png" />
								</image>
                              </ImageView>
							</graphic>
							<GridPane.margin>
                              <Insets right="1.0" />
                           </GridPane.margin>
                        </Button>
                  </children>
          		</GridPane>

				<GridPane minWidth="280" prefWidth="750" GridPane.columnIndex="1" GridPane.rowIndex="2">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="500.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="75.0" prefWidth="200.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="25.0" prefWidth="50.0" />
                        <ColumnConstraints />
					</columnConstraints>
					<rowConstraints>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
					</rowConstraints>
					<children>
					
						<TextField fx:id="fromField" editable="false" prefWidth="500.0"  styleClass="systemTextField" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
						
						<HBox styleClass="headerButtonHBox" alignment="CENTER"  prefHeight="30.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
							<children>
                            	<Label styleClass="systemFieldTitle" text="%VersionNumber"></Label>
                                <Label fx:id="versionField" text="1"></Label>
                        	</children>
                        </HBox>
                        
                        <HBox alignment="CENTER_RIGHT" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Button styleClass="iconButton" mnemonicParsing="false" onAction="#onSelectTemplate">
								<graphic>
                        		<ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
									<image>
									<Image url="@../../images/templates.png" />
									</image>
                            	</ImageView>
								</graphic>
								<GridPane.margin>
                              		<Insets right="1.0" />
                          		</GridPane.margin>
                           </Button>
						 </HBox>

                      </children>
					</GridPane>
					
				</children>
			</GridPane>
			
			</children>
		</VBox>
		
 	</center>
 	
 </BorderPane>
