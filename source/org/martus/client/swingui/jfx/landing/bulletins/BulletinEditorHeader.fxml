<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <top>
  	  <VBox styleClass="titleBox">
     <children>
         <Label fx:id="headerTitleLabel" alignment="CENTER" styleClass="titleText" text="[New {Record/Note} / Title of Message]" BorderPane.alignment="CENTER">
      </Label>
     </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="110.0" BorderPane.alignment="CENTER">
		<children>
            <Separator prefWidth="200.0">
			<VBox.margin>
				<Insets bottom="5.0" />
			</VBox.margin>
            </Separator>
            <GridPane alignment="CENTER_LEFT" prefWidth="920.0">
				<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="200" minWidth="50" prefWidth="150" />
				<ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="770" />
				</columnConstraints>
				<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				</rowConstraints>
				<children>
				
				<!--Column 1 -->
                  <Label styleClass="systemFieldTitle" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label styleClass="systemFieldTitle" text="To:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label styleClass="systemFieldTitle" text="From:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  
                  <!-- Column 2 -->
                  <TextField fx:id="titleField" styleClass="systemTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
          
				  <GridPane minWidth="280" prefWidth="750" GridPane.columnIndex="1" GridPane.rowIndex="1">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="700.0" />
                        <ColumnConstraints />
					</columnConstraints>
					<rowConstraints>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
					</rowConstraints>
					<children>
        
                        <TextField fx:id="toField" editable="false" styleClass="systemTextField" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
</TextField>
                        
                        <Button fx:id="addRemoveContact" mnemonicParsing="false" onAction="#onAddRemoveContact" GridPane.columnIndex="1" GridPane.rowIndex="0">
							<graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
								<image>
								<Image url="@../../images/add_contacts.png" />
								</image>
                              </ImageView>
							</graphic>
							                           <GridPane.margin>
                              <Insets right="1.0" />
                           </GridPane.margin>
                        </Button>
                  </children>
          		</GridPane>

                  <HBox prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
					<children>
                        <GridPane prefHeight="30.0" prefWidth="699.0">
							<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" maxWidth="491.0" minWidth="100.0" prefWidth="474.0" />
							<ColumnConstraints hgrow="SOMETIMES" maxWidth="251.0" minWidth="25.0" prefWidth="132.0" />
							<ColumnConstraints hgrow="SOMETIMES" maxWidth="274.0" minWidth="58.0" prefWidth="93.0" />
							</columnConstraints>
							<rowConstraints>
							<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<HBox prefHeight="30.0" prefWidth="185.0" GridPane.columnIndex="1">
								<children>
                                    <Label text="Version #:">
									<padding>
									<Insets left="25.0" top="5.0" />
									</padding>
                                    </Label>
                                    <Label fx:id="versionField" text="1">
									<padding>
									<Insets left="10.0" top="5.0" />
									</padding>
                                    </Label>
								</children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" GridPane.columnIndex="2">
								<children>
                                    <Button mnemonicParsing="false" onAction="#onSelectTemplate">
										<graphic>
                                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
											<image>
											<Image url="@../../images/templates.png" />
											</image>
                                          </ImageView>
										</graphic>
                                    </Button>
								</children>
							<padding>
							<Insets top="5.0" />
							</padding>
                              </HBox>
                              <TextField fx:id="fromField" editable="false" styleClass="systemTextField" />
						</children>
					</GridPane>
					</children>
                  </HBox>
				</children>
				<VBox.margin>
				<Insets left="10.0" right="10.0" />
				</VBox.margin>
			</GridPane>
			</children>
		<padding>
		<Insets bottom="10.0" />
		</padding>
		</VBox>
 	</center>
 </BorderPane>
