<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<children>
      <TextArea fx:id="editTemplateMessage" editable="false" prefHeight="75.0" wrapText="true" />
		<GridPane hgap="10.0" vgap="10.0">
	        <columnConstraints>
	          <ColumnConstraints hgrow="SOMETIMES" />
	          <ColumnConstraints hgrow="SOMETIMES" />
	        </columnConstraints>
	        <rowConstraints>
	          <RowConstraints vgrow="SOMETIMES" />
	          <RowConstraints vgrow="SOMETIMES" />
	        </rowConstraints>
	         <children>
					<TextField fx:id="templateTitle" prefWidth="400.0" GridPane.columnIndex="1" />
					<Label text="%InputCustomFieldsTitle" />
					<Label text="%inputCustomFieldsDescription" GridPane.rowIndex="1" />
					<TextField fx:id="templateDescription" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
	         </children>
	 		  <padding>
	   		   <Insets left="10.0" top="10.0" />
	  		 </padding>
      </GridPane>
      	</children>
      	</VBox>
