  <children>
	<BorderPane>
		<top>
			<VBox styleClass="mainTextBox">
				<Label styleClass="headingLevel1" text="Server Setup" />
				<Label styleClass="mainTextBoxText" maxWidth="600" wrapText="true" text="Connect to the Martus server to:" />
