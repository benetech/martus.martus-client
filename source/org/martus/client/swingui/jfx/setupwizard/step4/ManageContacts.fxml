<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="445.0" prefWidth="860" fx:id="contactsVbox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <children>
		<VBox styleClass="mainTextBox" prefWidth="655" maxWidth="655">
    <Label styleClass="headingLevel1" fx:id="fxAddManageContactLabel" text="Contacts" />
  	<Label prefHeight="140" styleClass="mainTextBoxText" fx:id="contactsOverviewLabel" text="To send information through Martus to your contacts, pull their public key from the Martus server using their access token. Verify that you have pulled the correct key, by checking their key's public code. Ask your contacts for their access token and public code to add them here. If you do not have this information now, you will be able to add contacts later." wrapText="true" />
		</VBox>
    <BorderPane >
      <top>
        <HBox prefHeight="53.0" >
          <children>
            <Label styleClass="headingLevel3" text="Access Token:" />
            <TextField id="" fx:id="accessTokenField" promptText="Access Token" />
            <Label prefWidth="38.0" />
            <Button styleClass="button_guided_action" id="" fx:id="addContactButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addContact" prefWidth="259.0" text="Add Contact" />
          </children>
        </HBox>
      </top>
      <center>
        <VBox BorderPane.alignment="CENTER">
          <children>
            <TableView id="contacts-table" fx:id="contactsTable" editable="true" prefHeight="251.0" prefWidth="684.0">
              <columns>
                <TableColumn styleClass="mainText" id="" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="106.0" sortable="true" text="%Button.ManageContactsName" fx:id="contactNameColumn" />
                <TableColumn styleClass="tableRow" maxWidth="5000.0" minWidth="10.0" prefWidth="177.0" text="%Button.ManageContactsSendToByDefault" fx:id="sendToByDefaultColumn" />
                <TableColumn styleClass="tableRow" editable="false" id="" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="394.0" sortable="true" text="%Button.ManageContactsPublicCode" fx:id="publicCodeColumn" />
                <TableColumn styleClass="tableRow" editable="false" maxWidth="5000.0" minWidth="10.0" prefWidth="81.0" resizable="false" sortable="true" text="%Button.ManageContactsVerified" fx:id="verificationStatusColumn" />
                <TableColumn styleClass="tableRow" editable="false" id="" maxWidth="5000.0" minWidth="10.0" prefWidth="62.0" resizable="false" sortable="false" text="%Button.ManageContactsRemove" fx:id="removeContactColumn" />
              </columns>
            </TableView>
          </children>
        </VBox>
      </center>
    </BorderPane>
  </children>
</VBox>
