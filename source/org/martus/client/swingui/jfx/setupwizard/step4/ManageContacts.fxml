<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="445.0" prefWidth="860" fx:id="contactsVbox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <children>
    <Label styleClass="headingLevel1" fx:id="fxAddManageContactLabel" text="Contacts" />
  	<Label styleClass="mainTextBoxText" fx:id="contactsOverviewLabel" text="To send information through Martus to your contacts, you need their public key. You can pull their public keys off of the Martus server using their 7 digit access token. You can verify that you have pulled the correct key, by using their key's public code.  Ask your contacts for the access token, and public code to add your contacts here. If you do not have this information now, you will be able to add contacts later from the Martus desktop client." wrapText="true" />
    <BorderPane >
      <top>
        <HBox prefHeight="53.0" >
          <children>
            <Label styleClass="headingLevel3" text="Access Token:" />
            <TextField id="" fx:id="accessTokenField" promptText="Access Token" />
            <Separator prefWidth="38.0" />
            <Button styleClass="button_guided_action" id="" fx:id="addContactButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addContact" prefWidth="259.0" text="Add Contact..." />
          </children>
        </HBox>
      </top>
      <center>
        <VBox BorderPane.alignment="CENTER">
          <children>
            <TableView id="contacts-table" fx:id="contactsTable" editable="true" prefHeight="251.0" prefWidth="684.0">
              <columns>
                <TableColumn styleClass="tableRow" id="" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="106.0" sortable="true" text="Contact Name" fx:id="contactNameColumn" />
                <TableColumn styleClass="tableRow" maxWidth="5000.0" minWidth="10.0" prefWidth="177.0" text="Send To by Default" fx:id="sendToByDefaultColumn" />
                <TableColumn styleClass="tableRow" editable="false" id="" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="394.0" sortable="true" text="Public Code" fx:id="publicCodeColumn" />
                <TableColumn styleClass="tableRow" editable="false" maxWidth="5000.0" minWidth="10.0" prefWidth="81.0" resizable="false" sortable="true" text="Verified" fx:id="verificationStatusColumn" />
                <TableColumn styleClass="tableRow" editable="false" id="" maxWidth="5000.0" minWidth="10.0" prefWidth="62.0" resizable="false" sortable="false" text="Remove" fx:id="removeContactColumn" />
              </columns>
            </TableView>
          </children>
        </VBox>
      </center>
    </BorderPane>
  </children>
</VBox>
