<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<AnchorPane  prefWidth="660" maxWidth="660" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <BorderPane>
			<top>
				<VBox styleClass="mainTextBox">
					<Label styleClass="headingLevel1" text="Create an Account" BorderPane.alignment="TOP_LEFT" />
					<Label styleClass="mainTextBoxText" text="When creating a user name and password for your account, please be aware there is no way to retrieve your user name and password if you forget it. This is for your safety." maxWidth="600" wrapText="true"/>
				</VBox>
			</top>
		<center>
		  <VBox >
		    <children>
			    <GridPane vgap="5.0" xmlns:fx="http://javafx.com/fxml" >
			      <columnConstraints>
			        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="-Infinity" />
			        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
			      </columnConstraints>
			      <rowConstraints>
			        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			      </rowConstraints>
			      <children>
			        <Label styleClass="headingLevel3" text="User Name:" />
			        <TextField id="accountName" fx:id="userName" promptText="create a user name" GridPane.columnIndex="1" />

			        <Label styleClass="headingLevel3" text="Password:" GridPane.rowIndex="1" />
			        <PasswordField id="password" fx:id="passwordField" promptText="create a password" GridPane.columnIndex="1" GridPane.rowIndex="1" />

			      </children>
			    </GridPane>
		        <Label styleClass="errorText" fx:id="errorLabel"  />
		        <Label fx:id="hintLabel" text="" />
			</children>
		  </VBox>
		</center>
		<bottom>
			<Label styleClass="hintText" text="Note: Later in this wizard, you will be led through a process to backup your account key. This will help protect your account from loss." prefHeight="200" maxHeight="200" maxWidth="600" wrapText="true"/>
		</bottom>
    </BorderPane>
  </children>
</AnchorPane>
